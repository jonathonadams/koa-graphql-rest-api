{
  "name": "api",
  "version": "0.0.4",
  "description": "Example Koa API that support REST and GraphQL",
  "author": {
    "name": "Jonathon Adams"
  },
  "type": "commonjs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jadams88/koa-graphql-rest-api"
  },
  "main": "dist/index.js",
  "keywords": [
    "Koa",
    "REST",
    "GraphQL"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "dev": "cross-env NODE_ENV=dev nodemon  -r dotenv/config dist/index.js",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:unit": "cross-env NODE_ENV=test jest --coverage --passWithNoTests --testPathPattern='\\w+\\.spec\\.tsx?'",
    "test:e2e": "cross-env NODE_ENV=test jest --coverage --runInBand --passWithNoTests --testPathPattern='\\w+\\.e2e\\.tsx?'",
    "test:staged": "cross-env NODE_ENV=test jest --passWithNoTests  --findRelatedTests",
    "test:watch": "cross-env NODE_ENV=test jest --coverage --watchAll",
    "test:snapshot:update": "jest --updateSnapshot --testPathPattern",
    "test:ci": "jest --detectOpenHandles --coverage --maxWorkers 4",
    "build": "gulp dev",
    "build:prod": "gulp prod",
    "format:fix": "pretty-quick --staged",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "lint:fix": "tslint --project tsconfig.json --config tslint.json --fix",
    "lint:staged": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s format:fix lint:staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "git add",
      "npm run test:staged"
    ]
  },
  "dependencies": {
    "@hapi/boom": "^8.0.1",
    "@types/hapi__boom": "^7.4.1",
    "apollo-server-koa": "^2.14.2",
    "bcryptjs": "^2.4.3",
    "dataloader": "^1.4.0",
    "glob": "^7.1.4",
    "graphql": "^14.5.8",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^4.0.5",
    "jsonwebtoken": "^8.5.1",
    "kcors": "^2.2.2",
    "koa": "^2.10.0",
    "koa-bearer-token": "^1.0.0",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^5.2.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.4.0",
    "lodash.keyby": "^4.6.0",
    "lodash.merge": "^4.6.2",
    "lodash.omit": "^4.5.0",
    "mongoose": "^5.7.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.27",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^24.0.18",
    "@types/jsonwebtoken": "^8.3.4",
    "@types/koa": "^2.0.50",
    "@types/koa-router": "^7.0.42",
    "@types/mongoose": "^5.5.20",
    "@types/node": "^12.7.12",
    "cross-env": "^6.0.3",
    "del": "^5.1.0",
    "dotenv": "^8.1.0",
    "gulp": "^4.0.2",
    "gulp-typescript": "^5.0.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-extended": "^0.11.2",
    "lint-staged": "^9.4.2",
    "mongodb-memory-server": "^5.2.8",
    "nodemon": "^1.19.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  }
}
